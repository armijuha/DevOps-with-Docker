FROM golang:1.16
EXPOSE 8080
WORKDIR /usr/src/app
COPY go.mod go.sum ./
RUN go mod download && go mod verify
ENV PORT 8080
ENV REQUEST_ORIGIN http://localhost:5000
COPY . .
RUN go build && go test ./...
CMD ["go", "run", "server"]


docker build . -t backend
docker run -p 127.0.0.1:8080:8080 backend
